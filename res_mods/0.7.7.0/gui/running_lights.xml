<?xml version="1.0" encoding="utf-8" ?>
<running_lights>
  <!-- Цвет ходового маркера ВПЕРЕД -->
  <ahead color="0x00ff00"/>
  <!-- Цвет ходового маркера СТОП -->
  <stop color="0xffff00"/>
  <!-- Цвет ходового маркера НАЗАД -->
  <astern color="0xff0000"/>

  <filters>
  <!--
    Дополнительные эффекты ходовых маркеров.

    Поддерживаются следующие эффекты:

     "Абрис"
      <glow color=[цвет абриса] alpha=[прозрачность] x=[ширина по горизонтали] y=[ширина по вертикали] strength=[интенсивность]/>
     "Тень"
      <shadow color=[цвет абриса] alpha=[прозрачность] x=[ширина по горизонтали] y=[ширина по вертикали] strength=[интенсивность] angle=[угол] distance=[дистанция]/>
  -->
    <glow color="0xe1e1e1" alpha="0.7" x="3" y="3" strength="1"/>
    <!--shadow color="0x00FF00" alpha="1.0" x="5" y="5" strength="1" angle="60" distance="10"/-->
  </filters>
  
  <!-- Смещение "светофора" относительно маркера корабля-->
  <offset x="0" y="-100"/>
</running_lights>
